# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/parfumo_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parfumo_db
DB_USER=user
DB_PASSWORD=password

# Crawler Configuration
CRAWLER_USER_AGENT=ParfumoExtract/1.0 (Educational Purpose)
CRAWLER_DELAY_MS=2000
CRAWLER_MAX_RETRIES=3
CRAWLER_TIMEOUT_MS=30000
CRAWLER_CONCURRENT_REQUESTS=2

# Logging
LOG_LEVEL=info
LOG_FILE=logs/crawler.log

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Cache
CACHE_TTL_HOURS=24
ENABLE_CACHE=true